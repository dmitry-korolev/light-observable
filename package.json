{
  "name": "light-observable",
  "version": "1.0.0",
  "description": "Light observable ponyfill",
  "main": "lib/index.js",
  "jsnext:main": "es/index.js",
  "typings": "es/index.d.ts",
  "scripts": {
    "build": "npm run build:module && npm run build:bundle",
    "build:module": "tsc",
    "build:bundle": "rollup -c rollup.config.js",
    "prebuild": "rimraf lib && rimraf es",
    "test": "npm run test:lint && npm run test:jest && npm run test:size",
    "test:size": "npm run build && size-limit",
    "test:lint": "tslint -t verbose './src/**/*.ts' './src/**/*.tsx' -p ./tsconfig.json -c ./tslint.json",
    "test:jest": "jest --runInBand --coverage --coverageReporters=text-lcov | coveralls",
    "precommit": "lint-staged",
    "prepush": "npm run test",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write --config .prettierrc",
      "git add"
    ]
  },
  "keywords": [
    "observable",
    "polyfill",
    "ponyfill",
    "ecmascript",
    "light"
  ],
  "author": "Dmitry Korolev <dmitry@korolev.dk> (https://korolev.dk)",
  "license": "Apache-2.0",
  "size-limit": [
    {
      "name": "Bundle",
      "path": "./lib/index.js",
      "limit": "829B"
    },
    {
      "name": "ES",
      "path": "./es/index.js"
    }
  ],
  "jest": {
    "transform": {
      ".(ts|tsx|js|jsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test|spec/",
      "/examples/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "globals": {
      "process.env.NODE_ENV": "test"
    }
  },
  "devDependencies": {
    "@types/jest": "^23.1.0",
    "@types/node": "^10.3.3",
    "commitizen": "^2.10.1",
    "coveralls": "^3.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "observable-operators": "^1.7.3",
    "prettier": "^1.13.6",
    "rollup": "^0.62.0",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rxjs": "^6.2.1",
    "size-limit": "^0.18.3",
    "ts-jest": "^23.0.0",
    "ts-node": "^7.0.0",
    "tslib": "^1.9.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.8.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
